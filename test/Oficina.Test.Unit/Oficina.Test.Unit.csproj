<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <IsPackable>false</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="coverlet.collector" />
    <PackageReference Include="Microsoft.NET.Test.Sdk" />
    <PackageReference Include="xunit" />
    <PackageReference Include="xunit.runner.visualstudio" />
    <PackageReference Include="Moq" />
  </ItemGroup>

  <ItemGroup>
    <Using Include="Xunit" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\Oficina.Infrastructure\Oficina.Infrastructure.csproj" />
    <ProjectReference Include="..\..\src\Oficina.App.Api\Oficina.App.Api.csproj" />
    <ProjectReference Include="..\..\src\Oficina.Domain\Oficina.Domain.csproj" />
  </ItemGroup>

  <Target Name="CopyEmailTemplate" AfterTargets="Build">
    <ItemGroup>
      <HtmlFiles Include="..\..\src\Oficina.Infrastructure\IO\Templates\Emails\*.html" />
    </ItemGroup>
    <Copy SourceFiles="@(HtmlFiles)" DestinationFolder="$(OutputPath)" />
  </Target>

</Project>
